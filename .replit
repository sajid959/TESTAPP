modules = ["dotnet-7.0", "nodejs-20", "bash", "web", "postgresql-16"]
run = "dotnet run"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"
packages = ["dotnet-sdk_8", "jq"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "dotnet run"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gateway API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend React App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Gateway API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src/Services/DSAGrind.Gateway.API && dotnet run --urls=\"http://0.0.0.0:5000\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Frontend React App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[agent]
expertMode = true
