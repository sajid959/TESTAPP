modules = ["dotnet-7.0", "nodejs-20", "bash", "web"]
run = "dotnet run"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"
packages = ["dotnet-sdk_8", "jq", "rabbitmq-server"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "dotnet run"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Gateway"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Backend Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src/Services/DSAGrind.Gateway.API && dotnet run --urls=http://0.0.0.0:8080"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true
