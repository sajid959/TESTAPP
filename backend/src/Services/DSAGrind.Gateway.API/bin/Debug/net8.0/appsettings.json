{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "Host": "0.0.0.0",
    "Port": "5000"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "https://localhost:3000", "http://localhost:5000", "https://localhost:5000"]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "problems-route": {
        "ClusterId": "problems-cluster",
        "Match": {
          "Path": "/api/problems/{**catch-all}"
        }
      },
      "categories-route": {
        "ClusterId": "problems-cluster",
        "Match": {
          "Path": "/api/categories/{**catch-all}"
        }
      },
      "submissions-route": {
        "ClusterId": "submissions-cluster",
        "Match": {
          "Path": "/api/submissions/{**catch-all}"
        }
      },
      "ai-route": {
        "ClusterId": "ai-cluster",
        "Match": {
          "Path": "/api/ai/{**catch-all}"
        }
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/api/search/{**catch-all}"
        }
      },
      "admin-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        }
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080"
          }
        }
      },
      "problems-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${PROBLEMS_SERVICE_URL:http://localhost:5001}"
          }
        }
      },
      "submissions-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${SUBMISSIONS_SERVICE_URL:http://localhost:5002}"
          }
        }
      },
      "ai-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${AI_SERVICE_URL:http://localhost:5003}"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${SEARCH_SERVICE_URL:http://localhost:5004}"
          }
        }
      },
      "admin-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${ADMIN_SERVICE_URL:http://localhost:5005}"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${PAYMENTS_SERVICE_URL:http://localhost:5006}"
          }
        }
      }
    }
  },
  "RabbitMQSettings": {
    "ConnectionString": "${RABBITMQ_CONNECTION_STRING:amqp://guest:guest@localhost:5672/}",
    "Username": "${RABBITMQ_USERNAME:guest}",
    "Password": "${RABBITMQ_PASSWORD:guest}",
    "VirtualHost": "${RABBITMQ_VIRTUAL_HOST:/}",
    "Port": "${RABBITMQ_PORT:5672}",
    "HostName": "${RABBITMQ_HOSTNAME:localhost}",
    "UseSSL": "${RABBITMQ_USE_SSL:false}"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  }
}